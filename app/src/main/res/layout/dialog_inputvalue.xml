<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加項目"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_22"
            android:fontFamily="@font/glowsanssc_condensed_regular"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"/>

        <TextView
            android:id="@+id/txt_hbpSBP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:text="hbp_SBP"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/glowsanssc_condensed_book"
            android:layout_below="@+id/txt_input"/>

        <Spinner
            android:id="@+id/spinner_hbpSBP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_below="@id/txt_hbpSBP"
            android:background="@drawable/background_spinner"/>

        <TextView
            android:id="@+id/txt_hbpDBP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_below="@id/spinner_hbpSBP"
            android:text="hbp_DBP"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/glowsanssc_condensed_book"/>

        <Spinner
            android:id="@+id/spinner_hbpDBP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_below="@id/txt_hbpDBP"
            android:background="@drawable/background_spinner"/>

        <TextView
            android:id="@+id/txt_morningDIA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_below="@id/spinner_hbpDBP"
            android:text="Morning_DIA"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/glowsanssc_condensed_book"/>

        <Spinner
            android:id="@+id/spinner_morningDIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_below="@id/txt_morningDIA"
            android:background="@drawable/background_spinner"/>

        <TextView
            android:id="@+id/txt_aftermealDIA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_below="@id/spinner_morningDIA"
            android:text="Aftermeal_DIA"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/glowsanssc_condensed_book"/>

        <Spinner
            android:id="@+id/spinner_aftermealDIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_below="@id/txt_aftermealDIA"
            android:background="@drawable/background_spinner"/>

        <TextView
            android:id="@+id/txt_mealStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_below="@id/spinner_aftermealDIA"
            android:text="Meal_Status"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/glowsanssc_condensed_book"/>

        <Spinner
            android:id="@+id/spinner_mealStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_below="@id/txt_mealStatus"
            android:background="@drawable/background_spinner"/>

        <TextView
            android:id="@+id/txt_medicationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_below="@id/spinner_mealStatus"
            android:text="MedicationStatus"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/glowsanssc_condensed_book"/>

        <Spinner
            android:id="@+id/spinner_medicationStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_below="@id/txt_medicationStatus"
            android:background="@drawable/background_spinner"/>

