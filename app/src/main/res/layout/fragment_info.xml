<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:backgroundTint="@null"
    tools:context=".SignUpFragment.Info">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:textColorHint="#707070"
            android:ellipsize="end"
            android:lines="1">

            <EditText
                android:id="@+id/edit_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:textColor="#707070"
                android:hint="用戶名稱*"
                android:inputType="text"
                android:maxLines="1"
                android:fontFamily="@font/glowsanssc_condensed_book"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_below="@+id/input_userName"
            android:textColorHint="#707070"
            android:ellipsize="end"
            android:lines="1">

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:textColor="#707070"
                android:hint="手機號碼*(將作為預設密碼)"
                android:inputType="number"
                android:lines="1"
                android:maxLength="10"
                android:maxLines="1"
                android:fontFamily="@font/glowsanssc_condensed_book"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_below="@+id/input_phone"
            android:textColorHint="#707070"
            android:ellipsize="end"
            android:lines="1">

            <EditText
                android:id="@+id/edit_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:textColor="#707070"
                android:hint="出生日期*"
                android:focusable="false"
                android:fontFamily="@font/glowsanssc_condensed_book"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_below="@+id/input_birth"
            android:textColorHint="#707070"
            android:ellipsize="end"
            android:lines="1">

            <EditText
                android:id="@+id/edit_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:textColor="#707070"
                android:hint="身高(公分cm)*"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:fontFamily="@font/glowsanssc_condensed_book"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_below="@+id/input_height"
            android:textColorHint="#707070"
            android:ellipsize="end"
            android:lines="1">

            <EditText
                android:id="@+id/edit_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:textColor="#707070"
                android:hint="體重(公斤kg)*"

                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:fontFamily="@font/glowsanssc_condensed_book"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_waist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_below="@+id/input_weight"
            android:textColorHint="#707070"
            android:ellipsize="end"
            android:lines="1">

            <EditText
                android:id="@+id/edit_waist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:textColor="#707070"
                android:hint="腰圍(公分cm)"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:fontFamily="@font/glowsanssc_condensed_book"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txt_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_25"
            android:fontFamily="@font/glowsanssc_condensed_book"
            android:layout_below="@+id/input_waist"
            android:text="性別*"
            android:textColor="#707070"
            android:textSize="@dimen/sp_18" />

        <CheckBox
            android:id="@+id/check_sexMale"
            style="@style/checkBox_style"
            android:layout_width="@dimen/dp_147"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_below="@+id/txt_sex"
            android:tag="1"
            android:text="男 Male"
            android:textSize="@dimen/sp_18" />

        <CheckBox
            android:id="@+id/check_sexFemale"
            style="@style/checkBox_style"
            android:layout_width="@dimen/dp_147"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_below="@+id/txt_sex"
            android:layout_toRightOf="@+id/check_sexMale"
            android:tag="2"
            android:text="女 Female"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

</ScrollView>